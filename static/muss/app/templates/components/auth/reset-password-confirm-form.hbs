{{#if isValidLink }}
<div class="ui container">
    <div class="ui cards">
        <div class="card" style="width: 100%">
            <div class="content">
                <div class="header">{{gettext "Change password" }}</div>

                <div class="description">
                    {{#if errorMessage}}
                        <div class="ui red message">
                            <p> {{errorMessage}} </p>
                        </div>
                    {{/if}}

                    <p>{{gettext "Please enter your new password twice so we can verify you typed it in correctly." }}</p>
                    <form class="ui form form100">
                        <div class="field">
                            <label>{{gettext "New password" }}</label>
                            {{input value=new_password1 type="password" }}
                            {{#if errorPassword1}}
                                <div class="ui pointing red basic label">
                                    <p> {{errorPassword1}} </p>
                                </div>
                            {{/if}}
                        </div>

                        <div class="field">
                            <label>{{gettext "Confirm password" }}</label>
                            {{input value=new_password2 type="password" }}
                            {{#if errorPassword2}}
                                <div class="ui pointing red basic label">
                                    <p> {{errorPassword2}} </p>
                                </div>
                            {{/if}}
                        </div>

                        <p><input type="buttton" class="ui primary button" {{ action "setNewPassowrd"}} value="{{gettext 'Change my password'}}" /></p>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
{{/if}}

{{#if isSuccess}}
<div class="ui container">
    <div class="ui cards">
        <div class="card" style="width: 100%">
            <div class="content">
                <h3>{{gettext "Congratulations" }}</h3>
                <div class="ui divider"></div>
                <p>{{gettext "Your password has been set.  You may go ahead and log in now." }}</p>
                <div class="ui divider"></div>
            </div>
        </div>
    </div>
</div>
{{/if}}
{{yield}}
