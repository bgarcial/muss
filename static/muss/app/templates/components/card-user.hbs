{{yield}}

<div class="card">
    <div class="image">
        {{#link-to "profile" user.username}}<img src="{{ user.userPhoto}}">{{/link-to}}
    </div>
    <div class="content">
        <div class="header">{{ user.firstName }} {{ user.lastName }}</div>
        <div class="meta">
            {{#link-to "profile" user.username}} {{ user.username }} {{/link-to}}
        </div>
    </div>
    <div class="extra content">
        <span class="right floated">
            {{ user.email }}
        </span>
    </div>
</div>